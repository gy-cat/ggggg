<!-- 
	开启app界面
	
 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xxd.ui.LaunchActivity"
    android:background="@color/login_background">
	<LinearLayout 
        android:id="@+id/ll_app_login_choice_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
	    <LinearLayout
	        android:id="@+id/ll_app_login_choice_icon"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:orientation="vertical" >
	
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/map" />
	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/app_login_icon_text_top"
	            android:text="@string/icon"
	            android:textColor="#4d8ed6"
	            android:textSize="34sp" /> 
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/ll_login_choice_button"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	
	        <Button
	            android:id="@+id/btn_launch_login"
	            style="?android:attr/buttonBarButtonStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/app_login_choice_marginmiddle"
	            android:layout_marginRight="@dimen/app_login_choice_marginLeft"
	            android:layout_weight="1"
	            android:background="@drawable/app_normal_login_button_background"
	            android:text="进入"
	            android:textSize="@dimen/app_login_choice_button_textsize"
	            android:layout_gravity="center_vertical"/>
	    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
